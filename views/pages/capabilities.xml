<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Capabilities Page View -->
    <record id="capabilities_page_view" model="ir.ui.view">
        <field name="name">SMTC Capabilities Page</field>
        <field name="type">qweb</field>
        <field name="key">theme_smtc.capabilities_page_view</field>
        <field name="arch" type="xml">
            <t t-name="theme_smtc.capabilities_page_view">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="oe_structure" id="oe_structure_smtc_capabilities_1" />

                        <section class="py-5" style="background-color: #0f172a;">
                            <div class="container py-4">
                                <h1 class="display-4 fw-bold text-white mb-4">Technical Capabilities</h1>
                                <p class="lead" style="color: #94a3b8;">Utilizing high-end
                                    Swiss-type CNC
                                    technology to deliver unmatched
                                    precision for complex component manufacturing.
                                </p>
                            </div>
                        </section>

                        <div class="oe_structure" id="oe_structure_smtc_capabilities_2" />

                        <t t-call="theme_smtc.s_smtc_capabilities" />
                        <t t-call="theme_smtc.s_smtc_quality" />

                        <div class="oe_structure" id="oe_structure_smtc_capabilities_3" />
                    </div>
                </t>
            </t>
        </field>
    </record>

    <!-- Capabilities Page -->
    <record id="capabilities_page" model="website.page">
        <field name="name">Capabilities</field>
        <field name="url">/capabilities</field>
        <field name="is_published">True</field>
        <field name="view_id" ref="capabilities_page_view" />
    </record>
</odoo>