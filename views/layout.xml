<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HEADER -->
    <template id="smtc_header" inherit_id="website.layout" name="SMTC Header">
        <xpath expr="//header" position="replace">
            <header class="smtc-header fixed-top bg-white shadow-sm" style="z-index: 1030;">
                <nav class="navbar navbar-expand-lg py-2">
                    <div class="container">
                        <!-- SMTC Logo -->
                        <a class="navbar-brand d-flex flex-column py-0" href="/">
                            <span class="fs-4 fw-bold"
                                style="line-height: 1; color: var(--o-color-2, #0f172a);">SMTC</span>
                            <span
                                style="font-size: 9px; letter-spacing: 0.15em; text-transform: uppercase; color: var(--o-color-1, #dc2626); font-weight: 600;">Swiss
                                Master Tech</span>
                        </a>

                        <!-- Mobile Toggle -->
                        <button class="navbar-toggler border-0 shadow-none" type="button"
                            data-bs-toggle="collapse" data-bs-target="#smtcNav"
                            aria-controls="smtcNav" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon" />
                        </button>

                        <!-- Navigation Links -->
                        <div class="collapse navbar-collapse" id="smtcNav">
                            <ul class="navbar-nav ms-auto me-3 gap-1">
                                <li class="nav-item">
                                    <a class="nav-link fw-medium px-3" href="/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-medium px-3" href="/industries">Industries</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-medium px-3" href="/capabilities">
                                        Capabilities</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-medium px-3" href="/about">About Us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-medium px-3" href="/contact">Contact</a>
                                </li>
                            </ul>
                            <a href="/quote" class="btn px-4 py-2 fw-semibold text-white"
                                style="background-color: var(--o-color-1, #dc2626); border-color: var(--o-color-1, #dc2626);">
                                Get a Quote
                            </a>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>

    <!-- FOOTER -->
    <template id="smtc_footer" inherit_id="website.layout" name="SMTC Footer">
        <xpath expr="//footer" position="replace">
            <footer class="s_smtc_footer pt-5 pb-4"
                style="background-color: var(--o-color-2, #0f172a);">
                <div class="container">
                    <div class="row g-5 mb-5">
                        <!-- Brand Column -->
                        <div class="col-lg-3 col-md-6">
                            <a href="/" class="d-block mb-4 text-decoration-none">
                                <span class="fs-3 fw-bold text-white d-block"
                                    style="line-height: 1;">SMTC</span>
                                <span
                                    style="font-size: 10px; letter-spacing: 0.2em; color: var(--o-color-1, #dc2626);">SWISS
                                    MASTER TECHNOLOGY CENTER</span>
                            </a>
                            <p class="small lh-lg" style="color: rgba(255,255,255,0.5);">
                                With 25 years of Swiss manufacturing experience, SMTC provides
                                high-precision,
                                tight-tolerance contract manufacturing for global industries.
                            </p>
                        </div>

                        <!-- Industries Column -->
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-white fw-semibold mb-4">Industries</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="/industries" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Oil &amp; Gas</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/industries" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Automotive</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/industries" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Medical &amp; Dental</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/industries" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Aerospace</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/industries" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Precision Electronics</a>
                                </li>
                            </ul>
                        </div>

                        <!-- Company Column -->
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-white fw-semibold mb-4">Company</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="/about" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">About Us</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/capabilities" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Capabilities</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/contactus" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Contact Us</a>
                                </li>
                                <li class="mb-2">
                                    <a href="/quote" class="text-decoration-none small"
                                        style="color: rgba(255,255,255,0.5);">Request Quote</a>
                                </li>
                            </ul>
                        </div>

                        <!-- Contact Column -->
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-white fw-semibold mb-4">Contact</h5>
                            <ul class="list-unstyled small" style="color: rgba(255,255,255,0.5);">
                                <li class="mb-2">International Manufacturing Park</li>
                                <li class="mb-2">Global Logistics Hub</li>
                                <li class="mb-2">Region Center</li>
                                <li class="mt-3 text-white">info@smtc-precision.com</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Bottom Bar -->
                    <div class="border-top pt-4"
                        style="border-color: rgba(255,255,255,0.1) !important;">
                        <div class="row align-items-center">
                            <div class="col-md-6 text-center text-md-start">
                                <p class="small mb-0" style="color: rgba(255,255,255,0.5);">Â© 2026
                                    Swiss Master Technology Center. All Rights Reserved.</p>
                            </div>
                            
                            <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                                <a href="#" class="small text-decoration-none me-3"
                                    style="color: rgba(255,255,255,0.5);">Privacy Policy</a>
                                <a href="#" class="small text-decoration-none me-3"
                                    style="color: rgba(255,255,255,0.5);">Terms of Service</a>
                                <a href="#" class="small text-decoration-none"
                                    style="color: rgba(255,255,255,0.5);">Sitemap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>
</odoo>