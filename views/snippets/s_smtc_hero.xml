<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_smtc_hero" name="SMTC Hero">
        <section class="s_smtc_hero" data-snippet="s_smtc_hero" data-name="SMTC Hero"
            style="min-height: 85vh; position: relative; overflow: hidden; background-color: var(--o-color-2, #0f172a);">
            <div style="position: absolute; inset: 0; opacity: 0.4;">
                <img
                    src="https://images.unsplash.com/photo-1565439320953-659129df833d?q=80&amp;w=1920&amp;auto=format&amp;fit=crop"
                    class="w-100 h-100" style="object-fit: cover;" alt="CNC Machine" loading="lazy" />
            </div>
            <div
                class="container position-relative d-flex align-items-center justify-content-center text-center"
                style="z-index: 10; min-height: 85vh;">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <h1 class="display-2 fw-bold text-white mb-4" style="line-height: 1.1;">
                            Precision Engineering, <span style="color: var(--o-color-1, #dc2626);">
                            SwissStandards.</span>
                        </h1>
                        <p class="lead text-white mb-5 mx-auto"
                            style="opacity: 0.8; max-width: 650px;">
                            Delivering high-volume, tight-tolerance Swiss-type CNC manufacturing
                            solutions for the world's most demanding engineering sectors.
                        </p>
                        <div class="d-flex flex-wrap gap-3 justify-content-center">
                            <a href="/quote"
                                class="btn btn-lg px-5 py-3 fw-bold text-white"
                                style="background-color: var(--o-color-1, #dc2626); border-color: var(--o-color-1, #dc2626);">
                                Upload Your Drawings
                            </a>
                            <a href="/industries"
                                class="btn btn-outline-light btn-lg px-5 py-3 fw-bold">
                                Explore Industries
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>