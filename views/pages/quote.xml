<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quote_page_view" model="ir.ui.view">
        <field name="name">SMTC Quote Page</field>
        <field name="type">qweb</field>
        <field name="key">theme_smtc.quote_page_view</field>
        <field name="arch" type="xml">
            <t t-name="theme_smtc.quote_page_view">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="oe_structure" id="oe_structure_smtc_quote_1" />
                        <div class="oe_structure" id="oe_structure_smtc_quote_2" />
                        <!-- Quote Form Section -->
                        <t t-call="theme_smtc.s_smtc_quote_form" />

                        <div class="oe_structure" id="oe_structure_smtc_quote_3" />

                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="quote_page" model="website.page">
        <field name="name">Request a Quote</field>
        <field name="url">/quote</field>
        <field name="is_published">True</field>
        <field name="view_id" ref="quote_page_view" />
    </record>
</odoo>