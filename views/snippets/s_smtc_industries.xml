<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_smtc_industries" name="SMTC Industries Preview">
        <section class="s_smtc_industries py-5" style="background-color: #0f172a;"
            data-snippet="s_smtc_industries" data-name="SMTC Industries Preview">
            <div class="container py-5">
                <div class="row align-items-end mb-5">
                    <div class="col-lg-8">
                        <h6 class="text-danger fw-bold text-uppercase mb-3"
                            style="letter-spacing: 0.15em;">Global Markets</h6>
                        <h2 class="display-5 fw-bold text-white">Industries We Serve</h2>
                        <p class="text-white-50 mt-3" style="font-size: 1.1rem;">
                            Supporting complex engineering requirements across specialized sectors
                            with high-repeatability manufacturing.
                        </p>
                    </div>
                    <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                        <a href="/industries" class="text-danger fw-semibold text-decoration-none">
                            View All Industries <i class="fa fa-arrow-right ms-2" />
                        </a>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-md-6 col-lg-3">
                        <div class="s_smtc_industry_card position-relative overflow-hidden"
                            style="height: 380px;">
                            <img
                                src="https://images.unsplash.com/photo-1518709268805-4e9042af9f23?q=80&amp;w=800&amp;auto=format&amp;fit=crop"
                                class="w-100 h-100" style="object-fit: cover; opacity: 0.6;"
                                alt="Oil &amp; Gas" />
                            <div class="position-absolute bottom-0 start-0 p-4"
                                style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); width: 100%; height: 60%;">
                                <h4
                                    class="text-white fw-bold position-absolute bottom-0 start-0 p-4 mb-0">Oil
                                    &amp; Gas</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="s_smtc_industry_card position-relative overflow-hidden"
