<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_smtc_stats" name="SMTC Stats Counter">
        <section class="s_smtc_stats py-5 bg-light" data-snippet="s_smtc_stats"
            data-name="SMTC Stats Counter">
            <div class="container py-4">
                <div class="row g-4">
                    <div class="col-6 col-md-3">
                        <div class="text-center p-4 bg-white border shadow-sm">
                            <div class="display-4 fw-bold text-danger mb-2">25+</div>
                            <div class="text-uppercase text-muted fw-bold small"
                                style="letter-spacing: 0.1em;">Years Exp</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="text-center p-4 bg-white border shadow-sm">
                            <div class="display-4 fw-bold text-danger mb-2">10M+</div>
                            <div class="text-uppercase text-muted fw-bold small"
                                style="letter-spacing: 0.1em;">Parts/Year</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="text-center p-4 bg-white border shadow-sm">
                            <div class="display-4 fw-bold text-danger mb-2">50+</div>
                            <div class="text-uppercase text-muted fw-bold small"
                                style="letter-spacing: 0.1em;">CNC Units</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="text-center p-4 bg-white border shadow-sm">
                            <div class="display-4 fw-bold text-danger mb-2">0.005mm</div>
                            <div class="text-uppercase text-muted fw-bold small"
                                style="letter-spacing: 0.1em;">Precision</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>